<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer shape with rounded corners (black) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <corners android:radius="20dp" /> <!-- Adjust the radius as needed -->
        </shape>
    </item>

    <!-- Inner shape with rounded corners (white) -->
    <item android:top="2dp" android:right="2dp" android:left="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="20dp" /> <!-- Adjust the radius as needed, should match the outer shape's radius -->
        </shape>
    </item>

</layer-list>
