<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer shape with rounded corners (black) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000" />
            <corners android:radius="20dp" /> <!-- Adjust the radius as needed -->
        </shape>
    </item>

    <!-- Inner shape with rounded corners (gradient from light blue to dark blue) -->
    <item android:top="3dp" android:right="3dp" android:left="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#63b9f6"
                android:endColor="#230042"
                android:angle="45" />
            <corners android:radius="20dp" /> <!-- Adjust the radius as needed, should match the outer shape's radius -->
        </shape>
    </item>
    <item android:gravity="center">
        <selector>
            <item android:drawable="@drawable/c_logo_small"/>
        </selector>
    </item>


</layer-list>